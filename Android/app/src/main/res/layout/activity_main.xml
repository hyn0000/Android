<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">


        <Button
            android:id="@+id/button1"
            android:layout_width="178dp"
            android:layout_height="248dp"

            android:background="@drawable/_member"
            android:text="@string/strBtn1"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="138dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="173dp"
            android:layout_height="251dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/_alram"
            android:text="@string/strBtn2"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="138dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="169dp"
            android:layout_height="236dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/_qr1"
            android:text="@string/strBtn3"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="170dp"
            android:layout_height="234dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/button3"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/_an"
            android:text="@string/strBtn"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="224dp" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/background_light"
            android:padding="10dp" />




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>